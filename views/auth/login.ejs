<% include ../partials/header %>
  <div class="section centered-v">
    <div class="container mt-5">
      <div class="row">
        <div class="col s12 m8 offset-m2">
          <div class="card blue lighten-1 z-depth-2">
            <div class="card-content white-text">
              <span class="card-title">Login to your account</span>
              <p>To experience the awesomeness...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <form action="/users/login" method="POST" class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input id="username" type="text" name="username" class="validate">
              <label for="username">Username</label>
              <span class="helper-text" data-error="wrong" data-success="right">Required</span>
            </div>
            <div class="input-field col s6">
              <input id="password" type="password" name="password" class="validate">
              <label for="password">Password</label>
              <span class="helper-text" data-error="wrong" data-success="right">Required</span>
            </div>
          </div>
          <div class="row center">
            <button type="submit" class="btn waves-effect waves-light blue z-depth-2">Register</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="/javascripts/materialize.min.js"></script>
  <script src="/javascripts/init.js"></script>
  </body>
</html> 
